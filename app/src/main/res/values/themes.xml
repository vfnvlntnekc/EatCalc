<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EatCalcProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/fon</item>
        <item name="colorPrimary">@color/fon2</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <!-- Цвет фона. -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redLight</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.EatCalcProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EatCalcProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EatCalcProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.EatCalcProject.Launcher">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
        <item name="colorPrimaryDark">@color/fon</item>
    </style>

    <style name="Theme.EatCalcProject.Red">
        <!-- Цвет фона. -->

        <item name="colorPrimaryDark">@color/redBackground</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.EatCalcProject.Yellow">
        <!-- Primary brand color. -->

        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorPrimary">@color/black</item>

        <item name="colorSecondary">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.EatCalcProject.Night">
        <!-- Primary brand color. -->

        <item name="colorPrimaryDark">@color/nightPrimary</item>
        <item name="colorPrimary">@color/nightOnPrimary</item>
        <item name="colorPrimaryVariant">@color/nightPrimaryVariant</item>
        <item name="colorOnPrimary">@color/nightOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nightRed</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>
</resources>